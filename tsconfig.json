{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015"],
      "allowJs": true,
      "jsx": "react",  // Important for JSX support in .tsx files
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  